@model IEnumerable<MenuItem>

@{
    ViewData["Title"] = "Menu Items";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Menu Item List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="MenuItems" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;Create New Menu Item
            </a>
        </div>
    </div>
    <br /><br />
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Item Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Category
                </th>
                <th>
                    Food Type
                </th>
                <th></th>
            </tr>
            @foreach (var menuItem in Model)
            {
                <tr>
                    <td width="40%">
                        @menuItem.Name
                    </td>
                    <td width="10%">
                        @menuItem.Price
                    </td>
                    <td width="25%">
                        @menuItem.Category.Name
                    </td>
                    <td width="25%">
                        @menuItem.FoodType.Name
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <!-- asp-route-id is parameter, named id, that is passed to the action method, Upsert, with the value of @menuItem.Id -->
                            <a asp-controller="MenuItems" asp-action="Upsert" asp-route-id="@menuItem.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="MenuItems" asp-action="Delete" asp-route-id="@menuItem.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </thead>
    </table>
</div>
